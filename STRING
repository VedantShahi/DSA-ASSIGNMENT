#include <iostream>
#include <string>
using namespace std;

int main()
{
    int temp;

    string s1;
    cin >> s1;
    string s2;
    cin >> s2;
    cout << s1.length() << " ";
    cout << s2.length() << endl;
    cout << s1 + s2 << endl;

    temp = s1[0];
    s1[0] = s2[0];
    s2[0] = temp;
    cout << s1 << "  " << s2;

    return 0;
}
